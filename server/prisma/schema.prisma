generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String?
  avatarUrl String?
  subjects  Subject[]
  habits    Habit[]
  toDo      ToDo[]
  deleted   Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model ToDo {
  id          Int       @id @default(autoincrement())
  title       String
  discription String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User?     @relation(fields: [userId], references: [id])
  userId      Int?
  toDoLog     ToDoLog[]

  @@index([userId])
}

model ToDoLog {
  id        Int       @id @default(autoincrement())
  startedAt DateTime  @default(now())
  endedAt   DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  toDo      ToDo?     @relation(fields: [toDoId], references: [id])
  toDoId    Int?

  @@index([toDoId])
}

model Subject {
  id          Int          @id @default(autoincrement())
  name        String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int
  habits      Habit[] // SO that hatbis are automaticaly ticked after certain amount of time has been logged
  deleted     Boolean      @default(false)
  subjectLogs SubjectLog[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([userId, name])
  @@index([userId])
}

model SubjectLog {
  id        Int       @id @default(autoincrement())
  startedAt DateTime  @default(now())
  endedAt   DateTime?
  subjectId Int
  subject   Subject   @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  deleted   Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([subjectId])
}

model Habit {
  id          Int            @id @default(autoincrement())
  name        String
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int
  subjectId   Int?
  subject     Subject?       @relation(fields: [subjectId], references: [id])
  description String         @default("")
  difficulty  difficulty     @default(MID)
  deleted     Boolean        @default(false)
  log         HabitTimeLog[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@unique([userId, name])
  @@index([userId])
}

enum difficulty {
  HIGH
  MID
  LOW
}

model HabitTimeLog {
  id        Int       @id @default(autoincrement())
  startedAt DateTime  @default(now())
  endedAt   DateTime?
  habit     Habit     @relation(fields: [habitId], references: [id])
  habitId   Int
  deleted   Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([habitId])
}
