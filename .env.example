# .env.example for openPumta put the env inside both next-app, server for now...

# --- Backend Configuration (server/) ---
# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/openpumta"

# Port to run the server on (default: 4000)
PORT=4000

# Google OAuth (for authentication)
GOOGLE_CLIENT_ID="your_google_client_id_here.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"

# Frontend URL for CORS
FRONTEND_URL="http://localhost:3000"

# Backend API URL
BACKEND_URL="http://localhost:4000"

# Secret for JWT signing
JWT_SECRET="your_jwt_secret_here"

# Secret for express-session
SESSION_SECRET="your_session_secret_here"

# Environment (development, production)
NODE_ENV="development"

# OpenAI API Key for AI Weekly Reports
OPENAI_API_KEY="sk-..."

# Redis URL (Optional, for rate-limiting)
REDIS_URL="redis://localhost:6379"

# --- Frontend Configuration (next-app/) ---
# Backend API URL (must start with NEXT_PUBLIC_ for client-side access)
NEXT_PUBLIC_BACKEND_URL="http://localhost:4000"
